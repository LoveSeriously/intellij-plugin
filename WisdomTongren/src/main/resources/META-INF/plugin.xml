<idea-plugin>
    <id>com.cloudting.WisdomTongren</id>
    <name>铜仁智慧社区生成魔板</name>
    <vendor email="WisdomTongren@cloudting.com" url="http://www.cloudting.com">cloudting</vendor>

    <description><![CDATA[
           	<style type="text/css">
                table,table tr th, table tr td { border:1px solid #000; }
                table { width: 500px; min-height: 30px; line-height: 30px; text-align: center; border-collapse: collapse; padding:2px; }
                td { padding: 0px 7px; }
                span { font-size: 8px; }
           	</style>
           	<h3>请使用以下格式生成魔板:</h3>
           	<table>
           	    <tbody>
           	        <tr><td width="150"><span>表名</span></td><td width="558"colspan="4"><span>sub_house_rentsell</span></td></tr>
           	        <tr><td width="150"><span>继承BaseModule</span></td><td width="558"colspan="4"><span>是</span></td></tr>
           	        <tr><td width="150"><span>单附件/图片</span></td><td width="558"colspan="4"><span>无</span></td></tr>
           	        <tr><td width="150"><span>多附件/图片</span></td><td width="558"colspan="4"><span>多张图片</span></td></tr>
           	        <tr>
           	            <td width="150"><span>名字</span></td>
           	            <td width="145"><span>字段</span></td>
           	            <td width="89"><span>类型</span></td>
           	            <td width="73"><span>长度</span></td>
           	            <td width="251"><span>备注</span></td>
           	        </tr>
           	        <tr>
           	            <td width="150"><span>使用用户</span></td>
           	            <td width="145"><span>userId</span></td>
           	            <td width="89"><span>varchar</span></td>
           	            <td width="73"><span>32</span></td>
           	            <td width="251"><span>关联&nbsp;sub_um_user</span></td>
           	        </tr>
           	        <tr>
           	            <td width="150"><span>设备规格</span></td>
           	            <td width="145"><span>equipmentParam</span></td>
           	            <td width="89"><span>blob</span></td>
           	            <td width="73"></td>
           	            <td width="251"><span>百度富文本</span></td>
           	        </tr>
           	        <tr>
           	            <td width="150"><span>保修期</span></td>
           	            <td width="145"><span>guarantee</span></td>
           	            <td width="89"><span>integer</span></td>
           	            <td width="73"><span>2</span></td>
           	            <td width="251"><span>数据字典(wearEquipment_guarantee)</span></td>
           	        </tr>
           	        <tr>
           	            <td width="150"><span>电池容量</span></td>
           	            <td width="145"><span>batteryCapacity</span></td>
           	            <td width="89"><span>integer</span></td>
           	            <td width="73"><span>10</span></td>
           	            <td width="251"><span>单位：&nbsp;mAh</span></td>
           	        </tr>
           	        <tr>
           	            <td width="150"><span>创建时间</span></td>
           	            <td width="145"><span>createTime</span></td>
           	            <td width="89"><span>date</span></td>
           	            <td width="73"></td>
           	            <td width="251"valign="top"><span>时间(yyyy-MM-dd&nbsp;HH:mm:SS)</span></td>
           	        </tr>
           	        <tr>
           	            <td width="150"><span>附件大小</span></td>
           	            <td width="145"><span>attachSize</span></td>
           	            <td width="89"><span>long</span></td>
           	            <td width="73"></td>
           	            <td width="251"valign="top"></td>
           	        </tr>
           	        <tr>
           	            <td width="150"><span>占地面积</span></td>
           	            <td width="145"><span>coverArea</span></td>
           	            <td width="89"><span>double</span></td>
           	            <td width="73"><span>8,2</span></td>
           	            <td width="251"valign="top"><span>平方米</span></td>
           	        </tr>
           	        <tr>
           	            <td width="150"><span>商品原价</span></td>
           	            <td width="145"><span>originalPrice</span></td>
           	            <td width="89"><span>decimal</span></td>
           	            <td width="73"><span>8,2</span></td>
           	            <td width="251"valign="top"><span>精确到小数点后两位</span></td>
           	        </tr>
           	    </tbody>
           	</table>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <fileTemplateGroup implementation="com.cloudting.intellij.plugin.core.factory.TemplateGroupFactory"/>
        <applicationService serviceInterface="com.cloudting.intellij.plugin.core.service.ISettingJspDirectoryService"
                            serviceImplementation="com.cloudting.intellij.plugin.core.service.impl.ISettingJspDirectoryServiceImpl"/>

        <projectConfigurable groupId="other"
                             instance="com.cloudting.intellij.plugin.core.configurable.SettingJspDirectoryConfigurable"/>
    </extensions>

    <actions>
        <action id="WisdomTongRen.New" class="com.cloudting.intellij.plugin.core.action.NewFileAction"
                text="NewFileAction" description="创建文件">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFile"/>
        </action>
    </actions>
</idea-plugin>